                            </tr>
                        </thead>
                    </table>

            </section>

           <div id= "div2"> 
                <form method="post" action="/assetstransfer">
                    <input type="hidden"  value="<%=address%>"  name="addressdata" >
                    <input type="hidden"  value="<%=city%>"  name="city" >

            <div class="form-group">
                <label for="fromaddress"> From Address</label>
                <input type="text" id="fadd" class="form-control"autocomplete="off" value="<%=address%>"  name="fromaddress" placeholder=" " readonly>
            </div>

            <div class="form-group">
                    <label for="asset"> Asset Name</label>
                    <input type="text" id="asset" class="form-control" autocomplete="off" value="<%=detailss.uid%>" name="assetname" placeholder=" " readonly>
                </div>
             <div class="form-group">
                        <label for="toaddress"> To Address</label>
                        <select class="form-control" id="tadd" name="toaddress">
                                <%
                                var i=0;
                                while(listofaddresses[i]){
                                %>
                              <option><%=listofaddresses[i].Branchname%>-<%=listofaddresses[i].blockchainaddress1%></option>
                              <% 
                              i++
                                }
                              %>
                        </select>
                      </div>
                      <input id="submit"  type="submit" value="Submit" class="btn btn-primary">

        </div>
